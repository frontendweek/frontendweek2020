.header
  position relative
  height 100%
  overflow hidden

  +below('phone')
    height 63rem

  &:after
    content ''
    position absolute
    display block
    top calc('100% - 13rem')
    left -50vw
    width 200vw
    height 200vh
    background $color-bg
    border-radius 100%
    box-shadow 0 0 10rem 1rem rgba(#fff, .3)

    +above('desktop-xbig')
      top calc('100% - 11rem')

    +below('phone')
      height 60vh
      top calc('100% - 5rem')

  &-line
    wrapper()
    padding-top 3rem

    &-text
      font-size 1.6rem
      color #fff
      font-family $font-title
      display inline-block
      border-bottom 1px dotted rgba(#fff, .3)
      padding .4em 0

  &-wrapper
    position relative
    wrapper()
    display flex
    align-items center
    height 100%

  &-content
    margin-top -13rem

    +below('phone')
      width 100%

  &-logo
    display inline-block
    width 42rem
    height 15rem
    bg('logo.svg')
    background-size 100% auto
    text-indent -9999em

    +below('tablet')
      width 36rem
      height 14rem

    +below('phone')
      width 100%
      height 14rem
      background-size 100% 100%

  &-action
    padding-top 3rem
    display flex
    align-items center
    justify-content space-between

    +below('tablet')
      padding-top 1rem

    +below('phone')
      display block
      text-align center

  &-date
    font-family $font-title
    font-size 2.1rem
    color #fff

    +below('tablet')
      font-size 1.6rem

    +below('phone')
      font-size 2rem
      padding-bottom 2rem

  &-astronaut
    position absolute
    right 12%
    top 50%
    width 28rem
    height 38rem
    margin-top -(@width / 1)
    bg('astronaut.svg')
    background-position center
    background-size 100% auto
    animation gravitating 7s ease-in-out infinite alternate

    +below('desktop-large')
      right 8%

    +below('tablet')
      right 4%
      width 24rem

    +below('phone')
      display none

.events
  position relative
  padding 5em 0
  background $color-bg

  &-wrapper
    wrapper()
    z-index 5
    position relative

  &-title
    font-size 5rem
    text-align center

    +below('phone')
      font-size 3rem

  &-list
    list-style none
    padding-top 7rem

    +below('phone')
      padding-top 5rem

  &-day
    display flex
    max-width 80rem
    margin 3rem auto

    +below('phone')
      display block
      margin 1rem auto

    &__date-title
      font-size 3rem
      line-height 1
      padding .3em .6em .2em
      background $color-default
      color #fff

      +below('phone')
        text-align center
        font-size 2.6rem

    &__list
      position relative
      width 100%
      padding 0 5rem .5rem

      +below('phone')
        padding 2rem 0

      &:before
        content ''
        position absolute
        bottom 0
        display block
        width 2.2rem
        height 1.2rem
        left -.85rem
        border-radius 100%
        background #ddd
        box-shadow 0 2px 2px rgba(#000, .2) inset
        z-index 1

        +below('phone')
          display none

      &:after
        content ''
        position absolute
        left 0
        bottom 0
        display block
        width .5rem
        height 100%
        background $color-default
        z-index 2
        border-radius 0 0 10px 10px

        +below('phone')
          display none

  &-add
    padding-top 12rem
    text-align center

    +below('phone')
      padding-top 5rem

    &-disclaimer
      font-family $font-title
      max-width 50rem
      margin 0 auto
      line-height 1.8
      font-size 1.6rem
      padding-bottom 3rem
      color $color-default

.event
  &-item
    background #fff
    border-radius 1rem
    padding 3rem 4rem
    box-shadow 0 0 50px rgba(#ddd, .2)
    margin-bottom 2rem
    border 1px solid rgba(#ddd, .5)
    will-change box-shadow
    transition box-shadow .2s ease-in-out

    &:hover
      box-shadow 0 0 50px rgba(#ddd, .4)
      border-color rgba(#ddd, .8)

    &:last-child
      margin-bottom 0

    +below('phone')
      padding 2rem

  &-title
    font-size 3rem

    +below('phone')
      font-size 2.2rem

  &-date
    font-size 1.6rem
    text-transform uppercase
    color #999
    margin .6em 0 0
    font-weight bold

    &__date
      &:after
        content 'â€¢'
        display inline-block
        color $color-primary
        padding 0 .7rem

  &-links
    padding-top 1.6rem
    display flex
    flex-wrap wrap

    &-item
      padding-right 1rem
      padding-bottom 1rem

  &-link
    display inline-block
    text-decoration none
    font-weight bold
    font-size 1.2rem
    text-transform uppercase
    color #fff
    background $color-default
    padding .5em 1em .6em
    border-radius 3px

    &:hover
      background $color-primary

.footer
  position relative
  padding 20rem 0 10rem
  overflow hidden

  +below('phone')
    padding 13rem 0 2rem

  &:after
    content ''
    position absolute
    display block
    bottom calc('100% - 13rem')
    left -50vw
    width 200vw
    height 200vh
    background $color-bg
    border-radius 100%
    box-shadow 0 0 10rem 1rem rgba(#fff, .3)

    +below('phone')
      height 60vh
      bottom calc('100% - 5rem')

  &-wrapper
    wrapper()
    display flex

    +below('phone')
      display block

  &-column
    flex 1

    &:first-child
      flex 0
      flex-basis 40%

    +below('phone')
      margin-bottom 5rem

  &-title
    color #fff
    font-size 1.6rem
    margin-bottom 2rem

  &-line
    padding .6em 0

  &-link
    display inline-block
    margin-right 1em
    text-decoration none
    color #fff
    font-size 1.2rem
    border-bottom 1px dotted #aaa
    text-transform uppercase
    padding-bottom .2em

    &:hover
      border-bottom-color $color-primary

  &-logos
    display flex
    align-items center

  &-logo-link
    display inline-block
    text-decoration none
    margin-right 4rem
    will-change opacity
    transition opacity .2s ease-in-out

    &:hover
      opacity .9

    img
      width 14rem

      +below('phone')
        width 12rem

.moon
  position absolute
  width 100%
  top -10rem
  bottom -10rem
  opacity .13
  z-index 1
  overflow hidden
  border-radius 100% / 20%

  +below('phone')
    bottom 0
    top 0

  &:before
    content ''
    position absolute
    border-radius 50%
    width 3rem
    height @width
    background transparent
    box-shadow multiple-box-shadow(70, lime)

.page-bg
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index -1
  background $color-default

.stars
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  opacity .5

.comets
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  transform rotate(-45deg)

.comet
  position absolute
  left 0
  width 1px
  height 1px
  background-color #fff
  animation comets 2s linear infinite

  &:before
    content ''
    position absolute
    display block
    width 200px
    right 1px
    top 0
    height 1px
    background-image linear-gradient(to right, rgba(#000, 0) 0%, rgba(#fff, .4) 100%)

  &.comet-01
    animation-duration 12s
    top 0

  &.comet-02
    animation-duration 10s
    top 40%

  &.comet-03
    animation-duration 15s
    top 70%

  &.comet-04
    animation-duration 9s
    top 100%

@keyframes animStar
  from
    transform translateY(0)
  to
    transform translateY(-2000px)

@keyframes gravitating
  from
    transform translateY(-2rem)
  to
    transform translateY(2rem)

@keyframes comets
  from
    transform translateX(-1rem)
  to
    transform translateX(110vw)
